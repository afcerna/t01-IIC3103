<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Mass</th>
      <th>Hair color</th>
      <th>Skin color</th>
      <th>Eye color</th>
      <th>Birth year</th>
      <th>Gender</th>
      <th>Homeworld</th>
      <!-- <th>Url</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person["name"] %></td>
        <td><%= person["height"] %></td>
        <td><%= person["mass"] %></td>
        <td><%= person["hair_color"] %></td>
        <td><%= person["skin_color"] %></td>
        <td><%= person["eye_color"] %></td>
        <td><%= person["birth_year"] %></td>
        <td><%= person["gender"] %></td>
        <td><%= person["homeworld"] %></td>
        <!-- <td><%= person["url"] %></td> -->
        <td><%= link_to 'Show', show_person_path(url: person["url"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
